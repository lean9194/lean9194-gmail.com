<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f20"
        android:gravity="center"
        android:text="Red"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/green"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FF2A"
        android:gravity="center"
        android:text="Green"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/red"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintBottom_toTopOf="@+id/blue"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0040FF"
        android:gravity="center"
        android:text="Blue"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/red"
        app:layout_constraintTop_toBottomOf="@id/green"
        app:layout_constraintBottom_toTopOf="@id/orange"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:gravity="center"
        android:text="Orange"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/red"
        app:layout_constraintTop_toBottomOf="@id/blue"
        app:layout_constraintBottom_toTopOf="@id/gray"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#534C49"
        android:gravity="center"
        android:text="Gray"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/red"
        app:layout_constraintTop_toBottomOf="@id/orange"
        app:layout_constraintBottom_toTopOf="@id/pink"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E40C56"
        android:gravity="center"
        android:text="Pink"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/red"
        app:layout_constraintTop_toBottomOf="@id/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>