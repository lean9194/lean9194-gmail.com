<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="View 4"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintLeft_toRightOf="@id/view3"
        app:layout_constraintBottom_toTopOf="@id/view5"/>
    <TextView
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="View 3"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintLeft_toRightOf="@id/view2"
        app:layout_constraintRight_toLeftOf="@id/view4"
        app:layout_constraintBottom_toTopOf="@id/view4"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="View 2"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintLeft_toRightOf="@id/view1"
        app:layout_constraintRight_toLeftOf="@id/view3"
        app:layout_constraintBottom_toTopOf="@id/view3"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="View 1"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toLeftOf="@id/view2"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="View 5"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/view4"
        app:layout_constraintBottom_toTopOf="@id/view6"
        app:layout_constraintLeft_toRightOf="@id/view6"
        app:layout_constraintRight_toLeftOf="@id/view4"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="View 6"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintRight_toLeftOf="@id/view5"
        app:layout_constraintBottom_toTopOf="@id/view7"
        app:layout_constraintLeft_toRightOf="@id/view7"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="View 7"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:layout_constraintRight_toLeftOf="@id/view6"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30sp"/>

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline1"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline2"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>