<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        app:layout_constraintHorizontal_chainStyle="packed"
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f20"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintLeft_toRightOf="@id/view3"
        app:layout_constraintRight_toLeftOf="@id/view4"
        app:layout_constraintBottom_toTopOf="@id/view5"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2FFF00"
        android:gravity="center"
        android:text="2"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@id/guideline5"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintRight_toLeftOf="@id/view1"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintLeft_toLeftOf="@id/guideline5"
        app:layout_constraintRight_toLeftOf="@id/view1"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#001AFF"
        android:gravity="center"
        android:text="4"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintLeft_toRightOf="@id/view1"
        app:layout_constraintRight_toRightOf="@id/guideline6"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="5"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintLeft_toRightOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintRight_toRightOf="@id/guideline6"
        android:textSize="30sp"/>
    <TextView
        app:layout_constraintHorizontal_weight="2.5"
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9C27B0"
        android:gravity="center"
        android:text="6"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        app:layout_constraintRight_toLeftOf="@+id/view0"
        android:textSize="30sp"/>
    <TextView
        app:layout_constraintHorizontal_weight="5"
        android:id="@+id/view0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/view6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        app:layout_constraintRight_toLeftOf="@+id/view7"
        android:textSize="30sp"/>
    <TextView
        app:layout_constraintHorizontal_weight="2.5"
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="7"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        app:layout_constraintLeft_toRightOf="@+id/view0"
        android:textSize="30sp"/>
    <TextView
        app:layout_constraintHorizontal_weight="2.5"
        android:id="@+id/view8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00F7FF"
        android:gravity="center"
        android:text="8"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view10"
        android:textSize="30sp"/>
    <TextView
        app:layout_constraintHorizontal_weight="5"
        android:id="@+id/view10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/view8"
        app:layout_constraintTop_toTopOf="@id/guideline4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view9"
        android:textSize="30sp"/>
    <TextView
        app:layout_constraintHorizontal_weight="2.5"
        android:id="@+id/view9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="9"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view10"
        android:textSize="30sp"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>